generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pessoa {
  nome          String
  email         String
  idade         Int
  matricula     String
  curso         String
  periodo       Int
  telefone      String
  dataInscricao DateTime @default(now())
  id            Int      @id @default(autoincrement())
  player        Player[]
  staff         Staff[]
}

model Staff {
  areaInteresse   String
  habilidades     String
  experiencia     String
  disponibilidade String
  id              Int    @id @default(autoincrement())
  pessoaId        Int
  pessoa          Pessoa @relation(fields: [pessoaId], references: [id])
}

model Player {
  modalidade      String
  role            String
  eloRanking      String
  experiencia     String?
  disponibilidade String
  linkPerfil      String?
  id              Int     @id @default(autoincrement())
  pessoaId        Int
  pessoa          Pessoa  @relation(fields: [pessoaId], references: [id])
}
